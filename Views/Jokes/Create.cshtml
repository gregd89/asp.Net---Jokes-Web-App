@model JokesWebApp.Models.Joke

@{
    ViewData["Title"] = "Create Joke";
}

<div class="container py-5">
    <div class="form-wrap mx-auto">
        <div class="card p-4 p-md-5">
            <div class="d-flex align-items-start justify-content-between flex-wrap gap-2">
                <div>
                    <h1 class="mb-1" style="font-family:'Nunito', sans-serif; font-weight:800;">
                        ✍️ Create a Joke
                    </h1>
                    <p class="text-muted mb-0">Add a question + punchline and save it to your collection.</p>
                </div>

                <a class="btn btn-light" asp-action="Index">← Back to list</a>
            </div>

            <hr class="my-4" />

            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="JokeQuestion" class="form-label fw-semibold">Joke Question</label>
                    <input asp-for="JokeQuestion"
                           class="form-control form-control-lg"
                           placeholder="e.g. Why did the chicken cross the road?"
                           autocomplete="off" />
                    <span asp-validation-for="JokeQuestion" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="JokeAnswer" class="form-label fw-semibold">Joke Answer</label>
                    <textarea asp-for="JokeAnswer"
                              class="form-control form-control-lg"
                              rows="3"
                              placeholder="e.g. To get to the other side 😄"></textarea>
                    <span asp-validation-for="JokeAnswer" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2 mt-4 flex-wrap">
                    <button type="submit" class="btn btn-success btn-lg">✅ Create</button>
                    <a class="btn btn-outline-secondary btn-lg" asp-action="Index">Cancel</a>
                </div>

                <div class="tip-box mt-4">
                    <div class="tip-title">✨ Quick tip</div>
                    <div class="tip-text text-muted">
                        Keep the question short and the punchline surprising — that’s the secret sauce.
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
