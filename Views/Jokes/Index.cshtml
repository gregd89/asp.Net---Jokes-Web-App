@model IEnumerable<JokesWebApp.Models.Joke>

@{
    ViewData["Title"] = "Jokes";
}

<div class="container py-5">
    <div class="d-flex align-items-start justify-content-between flex-wrap gap-2 mb-4">
        <div>
            <h1 class="mb-1" style="font-family:'Nunito', sans-serif; font-weight:800;">
                😂 Jokes
            </h1>
            <p class="text-muted mb-0">Browse your collection. Add new jokes anytime.</p>
        </div>

        <div class="d-flex gap-2">
            <a class="btn btn-success" asp-action="Create">+ New Joke</a>
            <a class="btn btn-light" asp-action="ShowSearchForm">🔎 Search</a>
        </div>
    </div>

    <div class="jokes-grid">
        @foreach (var item in Model)
        {
            <div class="card joke-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between gap-3">
                        <div class="flex-grow-1">
                            <div class="joke-label">Joke Question</div>
                            <div class="joke-question">@item.JokeQuestion</div>
                        </div>

                        <div class="joke-actions">
                            <a class="btn btn-sm btn-light" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="card p-4 mt-4 text-center">
            <h5 class="mb-2" style="font-family:'Nunito', sans-serif; font-weight:800;">No jokes yet</h5>
            <p class="text-muted mb-3">Create your first one and start building your comedy vault.</p>
            <a class="btn btn-success" asp-action="Create">+ Add a Joke</a>
        </div>
    }
</div>
