@model JokesWebApp.Models.Joke

@{
    ViewData["Title"] = "Delete Joke";
}

<div class="container py-5">
    <div class="form-wrap mx-auto">
        <div class="card p-4 p-md-5">
            <div class="d-flex align-items-start justify-content-between flex-wrap gap-2">
                <div>
                    <h1 class="mb-1" style="font-family:'Nunito', sans-serif; font-weight:800;">
                        🗑️ Delete Joke
                    </h1>
                    <p class="text-muted mb-0">This action can’t be undone.</p>
                </div>

                <a class="btn btn-light" asp-action="Index">← Back to list</a>
            </div>

            <div class="danger-callout mt-4">
                <div class="danger-title">⚠️ Are you sure you want to delete this joke?</div>
                <div class="danger-text text-muted">Once deleted, it’s gone forever.</div>
            </div>

            <hr class="my-4" />

            <div class="detail-block mb-3">
                <div class="detail-label">Joke Question</div>
                <div class="detail-value">@Model.JokeQuestion</div>
            </div>

            <div class="detail-block">
                <div class="detail-label">Joke Answer</div>
                <div class="detail-value">@Model.JokeAnswer</div>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex gap-2 flex-wrap">
                    <button type="submit" class="btn btn-danger btn-lg">🗑️ Yes, delete it</button>
                    <a class="btn btn-outline-secondary btn-lg" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
