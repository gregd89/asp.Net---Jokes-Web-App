@model JokesWebApp.Models.Joke

@{
    ViewData["Title"] = "Joke Details";
}

<div class="container py-5">
    <div class="form-wrap mx-auto">
        <div class="card p-4 p-md-5">
            <div class="d-flex align-items-start justify-content-between flex-wrap gap-2">
                <div>
                    <h1 class="mb-1" style="font-family:'Nunito', sans-serif; font-weight:800;">
                        📄 Joke Details
                    </h1>
                    <p class="text-muted mb-0">Here’s the full joke.</p>
                </div>

                <a class="btn btn-light" asp-action="Index">← Back to list</a>
            </div>

            <hr class="my-4" />

            <div class="detail-block mb-3">
                <div class="detail-label">Joke Question</div>
                <div class="detail-value">@Model.JokeQuestion</div>
            </div>

            <div class="detail-block">
                <div class="detail-label">Joke Answer</div>
                <div class="detail-value">@Model.JokeAnswer</div>
            </div>

            <div class="d-flex gap-2 mt-4 flex-wrap">
                <a class="btn btn-primary btn-lg" asp-action="Edit" asp-route-id="@Model.Id">✏️ Edit</a>
                <a class="btn btn-danger btn-lg" asp-action="Delete" asp-route-id="@Model.Id">🗑️ Delete</a>
                <a class="btn btn-outline-secondary btn-lg" asp-action="Index">Done</a>
            </div>
        </div>
    </div>
</div>
