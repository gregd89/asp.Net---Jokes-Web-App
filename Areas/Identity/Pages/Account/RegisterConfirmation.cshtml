@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirm your email";
}

<div class="container py-5 auth-page">
    <div class="form-wrap mx-auto">
        <div class="card p-4 p-md-5">
            <div class="d-flex align-items-start justify-content-between flex-wrap gap-2">
                <div>
                    <h1 class="mb-1" style="font-family:'Nunito', sans-serif; font-weight:800;">
                        ✅ Check your email
                    </h1>
                    <p class="text-muted mb-0">
                        We’ve sent a confirmation link to finish setting up your account.
                    </p>
                </div>

                <a class="btn btn-light" asp-controller="Home" asp-action="Index">← Home</a>
            </div>

            <hr class="my-4" />

            <div class="detail-block">
                @if (Model.DisplayConfirmAccountLink)
                {
                    <div class="mb-2" style="font-weight:700;">
                        Development mode:
                    </div>
                    <p class="text-muted mb-3">
                        Since an email sender isn’t configured, the confirmation link is shown here:
                    </p>

                    <a id="confirm-link" class="btn btn-primary"
                       href="@Model.EmailConfirmationUrl">
                        Confirm my account
                    </a>
                }
                else
                {
                    <p class="text-muted mb-0">
                        If you don’t see the email within a few minutes, check your spam/junk folder.
                    </p>
                }
            </div>

            <div class="tip-box mt-4">
                <div class="tip-title">✨ Next step</div>
                <div class="tip-text text-muted">
                    After confirming your email, you can log in and start adding jokes.
                </div>
            </div>

            <div class="d-flex gap-2 mt-4 flex-wrap">
                <a class="btn btn-success btn-lg" asp-page="./Login">Go to Login</a>
                <a class="btn btn-outline-secondary btn-lg" asp-controller="Jokes" asp-action="Index">Browse Jokes</a>
            </div>
        </div>
    </div>
</div>
